{
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "trailingComma": "es5",
    "bracketSameLine": true,
    "printWidth": 80,
    "endOfLine": "auto",
    "htmlWhitespaceSensitivity": "ignore",
    "linebreak-style": [
        true,
        "LF"
    ],
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        }
    ]
}